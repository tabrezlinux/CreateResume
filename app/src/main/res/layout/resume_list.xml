<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/resume_list_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_resume_list"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:background="@drawable/round_bg"
                    android:padding="16dp"
                    android:tint="@color/cardview_dark_background"
                    app:srcCompat="@drawable/ic_menu_camera" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/resume_list_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:autoSizeMaxTextSize="30sp"
                        android:autoSizeMinTextSize="12sp"
                        android:hint="Tabrez"
                        android:textSize="24sp"
                        app:layout_constraintStart_toEndOf="@+id/iv_resume_list"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/resume_list_fname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:hint="Ahmad"
                        android:textSize="18sp"
                        app:layout_constraintStart_toEndOf="@+id/iv_resume_list"
                        app:layout_constraintTop_toBottomOf="@+id/resume_list_name" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_gravity="right|end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/ib_resume_list_copy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/round_button_bg"
                    android:tint="@color/colorGreyTex"
                    app:srcCompat="@drawable/ic_menu_manage" />

                <ImageButton
                    android:id="@+id/ib_resume_list_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/round_button_bg"
                    android:text="edit"
                    android:tint="@color/colorGreyTex"
                    app:srcCompat="@drawable/ic_menu_camera" />

                <ImageButton
                    android:id="@+id/ib_resume_list_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/round_button_bg"
                    android:text="delete"
                    android:tint="@color/colorGreyTex"
                    app:srcCompat="@drawable/ic_menu_send" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>